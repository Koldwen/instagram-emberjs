<div class="left-side-panel">
  <LeftSidePanel::Item
    @linkRoute="index"
    @isSvgImg={{true}}
    @imgSrc="assets/svg/home-icon.svg"
    @imgAlt="Home icon"
    width="16px"
  />

  <LeftSidePanel::Item
    @linkRoute="search"
    @isSvgImg={{true}}
    @imgSrc="assets/svg/search-icon.svg"
    @imgAlt="Search icon"
    width="16px"
  />

  <LeftSidePanel::Item
    @linkRoute="profile"
    @imgSrc="assets/png/profile-picture.png"
    @imgAlt="Profile picture icon"
    width="16px"
    height="16px"
    class="profile-picture"
  />
</div>