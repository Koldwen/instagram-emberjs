<div class="left-side-panel">
  <LeftSidePanel::Item::Link
    @linkRoute="index"
    @isSvgImg={{true}}
    @imgSrc="assets/svg/app-logo-big.svg"
    @imgAlt="App logo"
  />

  <LeftSidePanel::Item::Link
    @linkRoute="index"
    @isSvgImg={{true}}
    @imgSrc="assets/svg/home-icon.svg"
    @imgAlt="Home icon"
    @text="Home"
    @imgWidth="24"
  />

  <LeftSidePanel::Item::Link
    @linkRoute="search"
    @isSvgImg={{true}}
    @imgSrc="assets/svg/search-icon.svg"
    @imgAlt="Search icon"
    @text="Search"
    @imgWidth="24"
  />

  <LeftSidePanel::Item::Link
    @linkRoute="profile"
    @imgSrc="assets/png/profile-picture.png"
    @imgAlt="Profile picture icon"
    @text="Profile"
    @imgWidth="24"
    @imgHeight="24"
    @imgClass="profile-picture"
  />

  <LeftSidePanel::Item::More />
</div>