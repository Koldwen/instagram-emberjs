<div id="more-menu" class="more-menu" style="{{@style}}">
  <div>
    <LeftSidePanel::Item
      @linkRoute="settings"
      @isSvgImg={{true}}
      @imgSrc="assets/svg/settings-icon.svg"
      @imgAlt="Settings icon"
      @text="Settings"
      width="16px"
    />

    <LeftSidePanel::Item
      @isSvgImg={{true}}
      @imgSrc="assets/svg/{{if this.darkTheme 'dark' 'light'}}-theme-icon.svg"
      @imgAlt="Switch theme icon"
      @text="Switch theme"
      @onClick={{this.toggleTheme}}
      width="16px"
    />
  </div>

  <span class="separator"></span>

  <LeftSidePanel::Item @linkRoute="index" @text="Exit" />
</div>